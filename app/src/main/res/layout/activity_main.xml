<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button"
                style="@style/oferta"
                android:background="@drawable/paris"
                android:text="@string/paris" />

            <Button
                android:id="@+id/button2"
                style="@style/oferta"
                android:background="@drawable/brasil"
                android:text="@string/brasil" />

            <Button
                android:id="@+id/button3"
                style="@style/oferta"
                android:background="@drawable/malta"
                android:text="@string/malta" />

            <Button
                android:id="@+id/button4"
                style="@style/oferta"
                android:background="@drawable/toledo"
                android:text="@string/toledo" />

            <Button
                android:id="@+id/button5"
                style="@style/oferta"
                android:background="@drawable/mexico"
                android:text="@string/mexico" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>